
@{
    ViewData["Title"] = "Index";
}

<!-- MAIN CONTENT-->
<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Menu</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="menu-icon-admin text-center">
                            <a asp-controller="About" asp-action="Index">
                                <i class="fad fa-address-card"></i>
                                <p>Haqqımızda</p>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">

                        <div class="menu-icon-admin text-center">
                            <a asp-controller="Product" asp-action="Index">
                                <i class="fal fa-box-full"></i>
                                <p>Məhsullar</p>
                            </a>
                        </div>

                    </div>
                    <div class="col-12 col-md-6 col-lg-3">

                        <div class="menu-icon-admin text-center">
                            <a asp-controller="Testimonials" asp-action="Index">
                                <i class="fab fa-intercom"></i>
                                <p>Müştərilərimiz</p>
                            </a>
                        </div>

                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="menu-icon-admin text-center">
                            <a asp-controller="Category" asp-action="Index">
                                <i class="fad fa-album-collection"></i>
                                <p>Kateqoriyalar</p>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="menu-icon-admin text-center">
                            <a asp-controller="Slider" asp-action="Index">
                                <i class="fal fa-photo-video"></i>
                                <p>Slider</p>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="menu-icon-admin text-center">
                            <a asp-controller="StaticData" asp-action="Details">
                                <i class="fad fa-table"></i>
                                <p>Sayt məlumatları</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
