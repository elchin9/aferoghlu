
@{
    @model CreateTestimonialsVM
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Müştəri Yarat</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-8">
                        <form method="post" class="mt-4" enctype="multipart/form-data">

                            <div class="form-group">
                                <label asp-for="Photo">Kateqoriya şəkli</label>

                                <input asp-for="Photo" accept="image/*" class="form-control" />
                                <span asp-validation-for="Photo" class="text-danger"></span>

                            </div>

                            <div class="form-group">
                                <label asp-for="FullNameAZ">Ad/Soyad adı (AZ)</label>

                                <input asp-for="FullNameAZ" class="form-control" />
                                <span asp-validation-for="FullNameAZ" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="FullNameEN">Ad/Soyad adı (EN)</label>

                                <input asp-for="FullNameEN" class="form-control" />
                                <span asp-validation-for="FullNameEN" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="FullNameRU">Ad/Soyad adı (RU)</label>

                                <input asp-for="FullNameRU" class="form-control" />
                                <span asp-validation-for="FullNameRU" class="text-danger"></span>

                            </div>

                            <div class="form-group">
                                <label asp-for="DescriptionAZ">Slide mətni (AZ)</label>

                                <input asp-for="DescriptionAZ" class="form-control" />
                                <span asp-validation-for="DescriptionAZ" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DescriptionEN">Slide mətni (EN)</label>

                                <input asp-for="DescriptionEN" class="form-control" />
                                <span asp-validation-for="DescriptionEN" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DescriptionRU">Slide mətni (RU)</label>

                                <input asp-for="DescriptionRU" class="form-control" />
                                <span asp-validation-for="DescriptionRU" class="text-danger"></span>
                            </div>
                            <input type="submit" class="btn-create" value="Yarat" />
                        </form>
                    </div>
                    <div class="col-12 col-md-4"></div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}