
@{
    @model IEnumerable<Slider>
    Layout = "_AdminLayout";
    ViewData["Title"] = "Index";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Slide-lar</h3>
                    </div>
                </div>
            </div>
            <table class="table table-bordered table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Şəkil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>

                                <img style="width: 150px;" src="~/images/@b.PhotoUrl" class="img-thumbnail" />

                            </td>
                            <td style="vertical-align: middle; text-align: center; color:white;">
                        
                                <a title="Dəyişdir" asp-action="Edit" asp-route-id="@b.Id" class="btn btn-warning mt-1"><i class="fal fa-edit"></i></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>

