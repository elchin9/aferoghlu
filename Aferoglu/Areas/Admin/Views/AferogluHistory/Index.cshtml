
@{
    @model IEnumerable<AferogluHistory>
    Layout = "_AdminLayout";
    ViewData["Title"] = "Index";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Tarixçə</h3>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12 mt-4">
                        <a asp-action="Create" class="btn btn-primary btn-block">
                            <i class="fas fa-plus"></i> Yeni tarixçə üzvü yarat
                        </a>
                    </div>
                </div>
            </div>
            <table class="table table-bordered table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Şəkil</th>
                    </tr>
                    <tr>
                        <th>Başlıq</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>

                                <img style="width: 50px;" src="~/images/@b.PhotoUrl" class="img-thumbnail" />

                            </td>
                            <td><p>@b.AferogluHistoryLangs.FirstOrDefault(p => p.Lang.Code.ToLower() == "az").Header</p></td>
                            <td style="vertical-align: middle; text-align: center; color:white;">

                                <a title="Ətraflı bax" asp-action="Details" asp-route-id="@b.Id" class="btn btn-success mt-1"><i class="fal fa-info"></i></a>
                                <a title="Dəyişdir" asp-action="Edit" asp-route-id="@b.Id" class="btn btn-warning mt-1"><i class="fal fa-edit"></i></a>

                                <a title="Sil" asp-action="Delete" asp-route-id="@b.Id" class="btn btn-danger mt-1"><i class="fal fa-trash"></i></a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>

